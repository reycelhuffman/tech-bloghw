<div class="row mb-4 postView">
  <div class="col-md-5">
    <h2>
      <article class=""posts">
      {{#each posts as |post|}}
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/post/{{post.id}}">{{post.title}}</a>
      <div class ="media postBox"></div>
    </h2>
    <p>Created by {{user.username}} on {{format_date project.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{project.description}}
    </p>
  </div>
</div>
{{/each}}
</article>
